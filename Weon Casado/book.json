{
    "plugins": [
        "search",
        "lunr",
        "fontsettings",
        "hints",
        "sharing",
        "block-align"
    ],
    "pluginsConfig": {
        "fontsettings": {
            "theme": "white", 
            "family": "sans", 
            "size": 2         
        },
        "lunr": {
            "maxIndexSize": 200000
        },
        "hints": {
            "info": "fa fa-info-circle",
            "tip": "fa fa-mortar-board",
            "danger": "fa fa-exclamation-cicle",
            "working": "fa fa-wrench"
        },
        "sharing": {
            "facebook": false,
            "twitter": false,
            "google": false,
            "weibo": false,
            "instapaper": false,
            "vk": false,
            "all": [
                "facebook", "google", "twitter"
            ]
        }
    }
}